pipeline {
    agent none
    stages {
        stage('build') {
        agent any
            steps {
                sh 'mvn compile'
            }
        }
    }
        stage('build') {
        agent any
            steps {
                sh 'docker build -t test/myapp .'
            }
        }
    }	
        stage('Deploy') {
            when {
              expression {
                currentBuild.result == null || currentBuild.result == 'SUCCESS' 
              }
            }
            steps {
                sh 'docker run -p 8081:8081 test/myapp'
            }	
		} 